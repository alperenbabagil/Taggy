<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="TagItemTextViewStyle" parent="Theme.AppCompat">
        <item name="android:layout_margin">@dimen/card_item_text_view_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TagItemCloseButtonStyle" parent="Theme.AppCompat">
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:src">@drawable/ic_baseline_cancel_24</item>
        <item name="android:layout_marginStart">@dimen/card_item_image_view_margin_start</item>
    </style>

    <style name="CancelTagEditingButtonStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/cancel_button_bg</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="DoneTagEditingButtonStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/done_button_bg</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TagItemStyle" parent="Theme.AppCompat">
        <item name="android:layout_margin">@dimen/card_item_margin</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/tag_item_corner_radius</item>
        <item name="cardElevation">@dimen/tag_item_card_elevation</item>
    </style>

    <style name="WarningTextCardViewStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">@dimen/warning_cv_card_corner_radius</item>
        <item name="cardElevation">@dimen/warning_cv_card_elevation</item>
        <item name="android:layout_margin">@dimen/warning_cv_margin</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="WarningTextTextViewStyle" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/warning_tv_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_margin">@dimen/warning_tv_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Theme.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TagViewBaseStyle" parent="Theme.AppCompat">
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
        <item name="cardElevation">@dimen/tag_view_base_elevation</item>
        <item name="cardCornerRadius">@dimen/tag_view_base_radius</item>
    </style>

</resources>